<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Loteria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Loteria.styles.css" asp-append-version="true" />

    <!-- Owl Stylesheets -->
    <link rel="stylesheet" href="~/lib/assets/owlcarousel/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/lib/assets/owlcarousel/assets/owl.theme.default.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Loteria</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Loteria" asp-action="Index">Juego</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Ganadores" asp-action="Index">Historico</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div id="loader" class="loader" style="display:none">
        <img src="img/progress-icon.gif" />
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Loteria
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* Axios *@
    <script src="~/lib/axios.min.js"></script>

    <!-- Owl javascript -->
    <script src="~/lib/assets/vendors/jquery.min.js"></script>
    <script src="~/lib/assets/owlcarousel/owl.carousel.js"></script>

    <script src="~/lib/assets/vendors/highlight.js"></script>
    <script src="~/lib/assets/js/app.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
